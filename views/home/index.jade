extends ../layout
block content
  div#fmprincipal(data-role="page")
    div(data-role="header", data-position="fixed")
        h1 Hora Extra
        a(href="#nav-panel" data-icon="bars" data-iconpos="notext" data-theme="b") Menu
        a(href="/logout" class="ui-btn ui-shadow ui-corner-all ui-btn-icon-left ui-icon-power ui-btn-b") #{session.nome}
    div(data-role="main" class="ui-content", data-cache="false")
        if messages.erro
          div(class="alert alert-danger")
            p #{messages.erro}
          br
        if messages.info
          div(class="alert alert-success")
            p #{messages.info}
          br      
        div(class="ui-grid-a ui-responsive")          
          div(class="ui-block-a")        
              div(class="ui-corner-all custom-corners")
                div(class="ui-bar ui-bar-a")
                  h3 Total semanal
                div(class="ui-body ui-body-a")
                  div(class="count") #{totais.TotalSemanal}
              br    
              div(class="ui-corner-all custom-corners")
                div(class="ui-bar ui-bar-a")
                  h3 Gráfico de hora semanal                    
                div(class="ui-body ui-body-a")
                  div#chartsemanal(class="ct-chart ct-perfect-fourth")     
              br         
          div(class="ui-block-b")        
              div(class="ui-corner-all custom-corners")
                div(class="ui-bar ui-bar-a")
                  h3 Total anual
                div(class="ui-body ui-body-a")
                  div(class="count") #{totais.TotalAnual}
                  div#teste
              br    
              div(class="ui-corner-all custom-corners")
                div(class="ui-bar ui-bar-a")
                  h3 Gráfico de hora anual
                div(class="ui-body ui-body-a")
                  div#chartanual(class="ct-chart ct-perfect-fourth")          
              br
    div(data-role="footer", data-position="fixed")
      h3 &copy; 2016 Samuel Carneiro
    div(data-role="panel" data-position-fixed="true" data-display="push" data-theme="a" id="nav-panel")
      ul(data-role="listview")
        li
          a(href="#" data-rel="close") Fechar menu
        li 
          a(href="/addhoraextra") Lançamento
        li 
          a(href="/consultahoraextra") Consultar
          
block scripts
  script(src="js/graficos.js")

  
     
    
