extends ../layout
block content
    #edithoraextra(data-role="page")
      div(data-role="header", data-position="fixed")
        h1 Editar 
        a(href="/consultahoraextra" data-icon="back" data-iconpos="notext" class="ui-link ui-btn-right ui-btn ui-icon-back ui-btn-icon-notext ui-shadow ui-corner-all ui-btn-b" data-role="button" role="button") Voltar      
      div(role="main", data-role="container")
        div(class="ui-corner-all custom-corners")      
          div(class="ui-body ui-body-a")
            form(method="POST", action="/edithoraextra")
                if messages.erro
                  div(class="alert alert-danger")
                    p #{messages.erro}
                  br
                if messages.info
                  div(class="alert alert-success")
                    p #{messages.info}
                  br
                div(class="form-group")
                    label Email:
                    input(type="email", name="e-mail", data-clear-btn="false", disabled="disabled", class="form-control", value="#{hora.email}")
                    input(type="hidden", name="email", value="#{hora.email}")
                div(class="form-group")
                    label Solicitação:
                    input(type="text", data-clear-btn="true", name="solicitacao",  placeholder="ML-00001", value="#{hora.solicitacao}")
                div(class="form-group")
                    label Data do início:
                    input(type="date", data-clear-btn="true", value="#{moment(hora.datainicial).format('YYYY-MM-DD')}", name="datainicial")                 
                div(class="form-group")
                    label Hora do início:
                    input(type="time", data-clear-btn="true", name="horainicial", value="#{hora.horainicial}")
                div(class="form-group")
                    label Data de final:
                    input(type="date", data-clear-btn="true", name="datafinal", value="#{moment(hora.datafinal).format('YYYY-MM-DD')}")
                div(class="form-group")
                    label Hora de final:
                    input(type="time", data-clear-btn="true", name="horafinal", value="#{hora.horafinal}")
                input(type="hidden", name="id", value="#{hora.id}")                                        
                button(type="submit" class="btn btn-primary") Salvar
                               
      div(data-role="footer", data-position="fixed")
        h3 &copy; 2016 Samuel Carneiro
