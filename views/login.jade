extends layout

block header          
  h1 Login
  a(href="/desenvolvedor" class="ui-btn ui-shadow ui-corner-all ui-icon-home ui-btn-icon-notext ui-btn-inline") Registrar
block content
  div(class="ui-body ui-body-a")
    form(method="GET", action="/", class="form-login")
      if messages.erro
        br
        div(class="alert alert-danger")
          each msg in messages.erro
            b= msg
            br
            br
      div(class="form-group")
        label E-mail:
        input(type="email", class="form-control", placeholder="E-mail", name="email", autofocus, required)
      div(class="form-group")
        label Senha:
        input(type="password", class="form-control", placeholder="Senha", name="password", required)
      button(type="submit", class="btn btn-primary btn-block") Entrar
